{
  "name": "hapify-cli",
  "version": "0.6.0",
  "description": "Command Line Interface for Hapify",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "hpf": "dist/index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "update": "npm-check -u",
    "test": "nyc mocha",
    "mocha": "mocha",
    "lint": "prettier --write '**/*.ts'",
    "build": "rimraf dist && tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:hapify/cli.git"
  },
  "keywords": [
    "hapify",
    "cli"
  ],
  "author": "Edouard Demotes-Mainard <edouard@tractr.net>",
  "license": "MIT",
  "homepage": "https://www.hapify.io",
  "dependencies": {
    "@hapi/hapi": "^17.8.5",
    "@hapi/hoek": "^6.1.3",
    "@hapi/inert": "^5.1.3",
    "axios": "^0.19.2",
    "case": "^1.6.3",
    "chalk": "^2.4.1",
    "commander": "^6.1.0",
    "detect-port": "^1.2.3",
    "find-package-json": "^1.2.0",
    "hapify-generator": "github:hapify/generator#v0.5.3",
    "hapify-gui": "github:hapify/gui#v0.5.0",
    "hapify-vm": "github:hapify/vm#v0.3.2",
    "inquirer": "^6.3.1",
    "joi": "^13.6.0",
    "jsonwebtoken": "^8.5.1",
    "jszip": "^3.5.0",
    "md5": "^2.2.1",
    "mkdirp": "^0.5.1",
    "opn": "^5.5.0",
    "querystring": "^0.2.0",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.3",
    "simple-git": "^1.115.0",
    "typedi": "^0.8.0",
    "vm2": "^3.9.2",
    "ws": "^6.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@hapi/code": "^8.0.2",
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.12.2",
    "@types/detect-port": "^1.3.0",
    "@types/find-package-json": "^1.1.1",
    "@types/hapi__hapi": "^18.2.4",
    "@types/hapi__hoek": "^6.2.0",
    "@types/hapi__inert": "^5.2.0",
    "@types/hoek": "^4.1.3",
    "@types/http-server": "^0.10.0",
    "@types/inquirer": "0.0.43",
    "@types/joi": "^13.6.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/jszip": "^3.4.1",
    "@types/md5": "^2.2.0",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^10.14.9",
    "@types/ora": "^1.3.4",
    "@types/randomstring": "^1.1.6",
    "@types/rimraf": "^2.0.2",
    "@types/ws": "^6.0.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "npm-check": "^5.9.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.6"
  },
  "engines": {
    "node": ">=9"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged --pattern \"**/*.ts\""
    }
  }
